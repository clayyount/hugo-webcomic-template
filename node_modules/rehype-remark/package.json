{
  "name": "rehype-remark",
  "version": "2.1.0",
  "description": "remark support for rehype",
  "license": "MIT",
  "keywords": [
    "remark",
    "rehype",
    "mdast",
    "hast"
  ],
  "repository": "https://github.com/wooorm/rehype-remark",
  "bugs": "https://github.com/wooorm/rehype-remark/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "dependencies": {
    "hast-util-to-mdast": "^1.1.0"
  },
  "files": [
    "index.js"
  ],
  "devDependencies": {
    "browserify": "^14.0.0",
    "esmangle": "^1.0.1",
    "nyc": "^11.0.0",
    "rehype-parse": "^4.0.0",
    "rehype-stringify": "^3.0.0",
    "remark-cli": "^3.0.0",
    "remark-preset-wooorm": "^3.0.0",
    "remark-stringify": "^3.0.0",
    "tape": "^4.0.0",
    "unified": "^6.0.0",
    "xo": "^0.18.1"
  },
  "scripts": {
    "build-md": "remark . -qfo",
    "build-bundle": "browserify index.js --bare -s rehypeRemark > rehype-remark.js",
    "build-mangle": "esmangle rehype-remark.js > rehype-remark.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test.js",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "xo": {
    "space": true,
    "esnext": false,
    "ignores": [
      "rehype-remark.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
